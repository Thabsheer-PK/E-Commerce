<div class="container mt-5">
  <!-- Profile Info Card -->
  <div class="card shadow p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3><i class="bi bi-person-circle"></i> My Profile</h3>
      <a href="/profile/edit" class="btn btn-primary btn-sm">Edit Profile</a>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Name:</strong> {{user.Name}}</li>
      <li class="list-group-item"><strong>Email:</strong> {{user.Email}}</li>
      <li class="list-group-item"><strong>Phone:</strong> {{user.Mobile}}</li>
    </ul>

    <div class="mt-4">
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
  </div>

  <div class="card shadow p-4">
    <h4><i class="bi bi-box-seam"></i> My Orders</h4>
    {{#if orders.length}}
      <ul class="list-group mt-3">
        {{#each orders}}
          <li class="list-group-item">
            <strong>Order ID:</strong> {{this.orderNumber}}<br>
            <strong>Ordered On:</strong> {{formatDate this.date}}<br>
            <strong>Total:</strong> {{priceFormat this.grandTotal}}<br>
            <strong>Status:</strong> {{capitalize this.status}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="mt-3 text-muted">You have no past orders.</p>
    {{/if}}
  </div>
</div>

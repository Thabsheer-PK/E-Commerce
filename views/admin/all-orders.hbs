<section class="container mt-3 mb-5">
  <h2 class="text-center mb-4">ðŸ›’ All Orders</h2>

  {{#if orders.length}}
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
    {{#each orders}}
    <div class="col">
      <div class="card shadow-sm p-3">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1">Order ID: <code>{{this._id}}</code></h5>
            <small class="text-muted">Placed on: {{formatDate this.date}}</small>
          </div>
          <span class="badge rounded-pill bg-secondary">{{capitalize this.status}}</span>
        </div>

        <hr>

        <p class="mb-1"><strong>Total:</strong> {{priceFormat this.grandTotal}}</p>
        <p class="mb-1"><strong>Payment Method:</strong> {{this.paymentMethod}}</p>

        <hr>

        <p class="mb-1"><strong>Customer:</strong> {{this.userDetails.Name}}</p>
        <p class="mb-1"><strong>Email:</strong> {{this.userDetails.Email}}</p>
        <p class="mb-1"><strong>Phone:</strong> {{this.userDetails.Mobile}}</p>

        <hr>

        <p class="mb-1"><strong>Delivery Address:</strong></p>
        <p class="mb-0">
          {{this.delivaryAddress.name}}<br>
          {{this.delivaryAddress.addressLine}}, {{this.delivaryAddress.city}}<br>
          {{this.delivaryAddress.pincode}}<br>
          {{this.delivaryAddress.mobile}}<br>
          {{this.delivaryAddress.email}}
        </p>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="alert alert-warning text-center mt-4">
     No orders found.
  </div>
  {{/if}}
</section>
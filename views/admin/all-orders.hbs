<section class="container my-5">
  <h2 class="text-center mb-4">ðŸ›’ All Orders</h2>

  {{#if orders.length}}
  <div class="table-responsive">
    <table class="table table-hover text-center align-middle shadow-sm">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Order ID</th>
          <th>User</th>
          <th>Total</th>
          <th>Payment</th>
          <th>Status</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <td>{{inc @index}}</td>
          <td><code>{{this._id}}</code></td>
          <td>
            <strong>{{this.user.name}}</strong><br>
            <small class="text-muted">{{this.user.email}}</small>
          </td>
          <td>â‚¹{{this.totalAmount}}</td>
          <td>{{this.paymentMethod}}</td>
          <td>
            <span class="badge rounded-pill bg-secondary">{{this.status}}</span>
          </td>
          <td><small>{{formatDate this.createdAt}}</small></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <div class="alert alert-warning text-center mt-4">
    ðŸ“­ No orders found.
  </div>
  {{/if}}
</section>
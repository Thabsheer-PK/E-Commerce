<section>
  <div class="container-fluid">
    <div class="row mt-4">
      <div class="col text-center">
        <a href="/admin/add-product" class="btn btn-success">Add Product</a>
      </div>

    </div>
    <div class="d-none d-md-block">
      <table class="table table-bordered text-center mt-4">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col" class="text-center">Updation</th>
          </tr>
        </thead>
        
        <tbody>
          {{#each products}}
          <tr>
            <th scope="row">{{inc @index}}</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td>
              <img style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg" alt="">
            </td>
            <td>
              <div class="d-flex text-center" style="justify-content: center;">
                <a href="/admin/editProduct/{{this._id}}" class="btn btn-primary mr-1">Edit</a>
                <a href="/admin/deleteProduct/{{this._id}}" class="btn btn-danger ml-1"
                  onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
              </div>


            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>


    <div class="d-block d-md-none mt-4">
      {{#each products}}
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title fs-2">{{this.Name}}</h5>
          <p class="card-text mb-1"><strong>Category:</strong> {{this.Category}}</p>
          <p class="card-text mb-1"><strong>Price:</strong> â‚¹{{this.Price}}</p>
          <p class="card-text mb-1"><strong>Description:</strong> {{this.Description}}</p>
          <div class="mb-2">
            <img src="/product-images/{{this._id}}.jpg" alt="Image" class="img-fluid rounded m-2"
              style="width: 80px; height: 80px;">
          </div>
          <div class="d-flex gap-2">
            <a href="/admin/editProduct/{{this._id}}" class="btn btn-sm btn-primary">Edit</a>
            <a href="/admin/deleteProduct/{{this._id}}" class="btn btn-sm btn-danger"
              onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>

</section>
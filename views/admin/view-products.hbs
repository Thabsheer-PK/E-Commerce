<section class="container my-5">
  <div class="text-center mb-4" style="margin-top:-1em">
    <a href="/admin/add-product" class="btn btn-success">Add Product</a>
  </div>

  <div class="row g-4">
    {{#each products}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card h-100 shadow-sm">
        <div class="text-center p-3">
          <img src="/product-images/{{this._id}}.jpg" class="img-fluid" alt="{{this.Name}}"
            style="object-fit: contain; height: 150px;">
        </div>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.Name}}</h5>
          <p class="mb-1"><strong>Category:</strong> {{this.Category}}</p>
          <p class="mb-1"><strong>Price:</strong> {{priceFormat this.Price}}</p>
          <p class="mb-2"><strong>Description:</strong> {{this.Description}}</p>
          <div class="mt-auto d-flex justify-content-between gap-2">
            <a href="/admin/editProduct/{{this._id}}" class="btn btn-primary btn-sm w-100">Edit</a>
            <a href="/admin/deleteProduct/{{this._id}}" class="btn btn-danger btn-sm w-100"
              onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>